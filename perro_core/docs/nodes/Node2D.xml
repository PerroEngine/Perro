<?xml version="1.0" encoding="UTF-8"?>
<class name="Node2D" inherits="Node">
  <description>2D node with transform and visibility.</description>

  <properties>
    <property name="transform" type="Transform2D" />
    <property name="visible" type="bool" />
  </properties>

  <methods>
    <method name="get_visible" returns="bool">
      <description>Returns true if the node is visible.</description>
      <examples>
        <example language="pup">if self.get_visible() { print("visible!") }</example>
        <example language="csharp">if (self.GetVisible()) Console.WriteLine("visible!");</example>
        <example language="ts">if (self.getVisible()) console.log("visible!")</example>
      </examples>
    </method>

    <method name="set_visible" returns="void">
      <param name="visible" type="bool" />
      <description>Sets the node's visibility.</description>
      <examples>
        <example language="pup">self.set_visible(false)</example>
        <example language="csharp">self.SetVisible(false);</example>
        <example language="ts">self.setVisible(false);</example>
      </examples>
    </method>
  </methods>
</class>
